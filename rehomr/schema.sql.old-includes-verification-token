CREATE TABLE users (id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, verification_token REAL NOT NULL, active INTEGER DEFAULT 0, username TEXT UNIQUE NOT NULL, pw_hash TEXT NOT NULL, email_hash TEXT NOT NULL);
CREATE TABLE strays (id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, species TEXT NOT NULL, breed TEXT, color TEXT, state TEXT NOT NULL, city TEXT NOT NULL, description TEXT, image_id TEXT, time INTEGER, user_id INTEGER NOT NULL, FOREIGN KEY(user_id) REFERENCES users(id));